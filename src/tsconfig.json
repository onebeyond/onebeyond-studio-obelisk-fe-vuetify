{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./",
        "paths": {
            "@assets/*": ["assets/*"],
            "@js/*": ["src/js/*"],
            "@components/*": ["src/components/*"]
        },
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "moduleResolution": "node",
        "lib": ["ES2022", "dom"],
        "types": ["webpack-env"],
        "typeRoots": ["src/@types"]
    },
    "include": ["./**/*", "./src/js/**/*", "./src/components/**/*", "../../node_modules/**/*"],
    "exclude": ["node_modules", "dist"]
}
